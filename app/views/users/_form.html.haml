= simple_form_for(@user, remote: true) do |form|
  .modal-body
    = form.error_notification
    .row
      = form.input :first_name, wrapper_html: { class: "col-sm-6" }
      = form.input :last_name, wrapper_html: { class: "col-sm-6" }
    .row
      = form.input :email, required: true, wrapper_html: { class: "col-sm-6" }
      = form.input :phone, wrapper_html: { class: "col-sm-6" }
    .row
      = form.input :role, collection: User.roles_to_collection, wrapper_html: { class: "col-sm-6" }, input_html: { data: { "allow-clear" => false }}
      .col-sm-6
        %label Settings
        .inline-checkboxes
          = form.input :support

    = form.input :time_zone do
      = form.time_zone_select :time_zone, ActiveSupport::TimeZone.us_zones, { default: "Arizona" }, class: "form-control text-right", data: { "allow-clear" => false  }

  .modal-footer
    = form.button :submit, class: "btn btn-primary", data: { disable_with: "Please waitâ€¦" }
    = link_to "Cancel", "#", class: "btn btn-default", data: { dismiss: "modal" }, type: "button"

:javascript
  Turfandpest.Users.initForm();
